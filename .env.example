# 应用配置
NEXT_PUBLIC_SITE_URL=https://feedback.styleme.ai
NEXT_PUBLIC_APP_ENV=production # production, staging, development

# Cloudinary 配置
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
NEXT_PUBLIC_CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# 认证配置
NEXT_PUBLIC_AUTH_SECRET=your-auth-secret
NEXT_PUBLIC_AUTH_URL=https://feedback.styleme.ai

# API 配置
NEXT_PUBLIC_API_URL=https://api.styleme.ai

# Cloudflare 配置
CF_ACCOUNT_ID=your-cloudflare-account-id
CF_API_TOKEN=your-cloudflare-api-token

# D1 数据库配置
CF_DATABASE_ID=your-d1-database-id
CF_DATABASE_NAME=feedback_db

# R2 存储配置
CF_R2_BUCKET=feedback-assets
CF_R2_ACCESS_KEY_ID=your-r2-access-key-id
CF_R2_SECRET_ACCESS_KEY=your-r2-secret-access-key

# Turnstile 配置
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your-turnstile-site-key
TURNSTILE_SECRET_KEY=your-turnstile-secret-key
